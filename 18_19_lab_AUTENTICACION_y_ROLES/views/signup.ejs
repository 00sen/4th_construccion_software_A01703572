<%- include('includes/head.ejs') %>
<body>
    <div class="text-center">
        <h1 class="display-4">Registrate</h1>
    </div>


    <form action="/signup" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="container">
            <div class="input-group mb-3">
                <input required name="nombre" id="nombre" class="form-control" type="text" placeholder="Name" aria-label="Nombre" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <input required name="username" id="username" class="form-control" type="text" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <input required name="password" id="password" class="form-control" type="password" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
            </div>
            <div class="text-center">
            <input class="btn btn-outline-primary" type="submit" value="Registrar">
            </div>
        </div>
    </form>
</body>